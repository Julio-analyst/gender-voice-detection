# ============================================================================
# Environment Variables Template
# Gender Voice Detection MLOps Project
# ============================================================================
# INSTRUKSI:
# 1. Copy file ini menjadi '.env'
# 2. Isi semua nilai yang diperlukan
# 3. JANGAN commit file .env ke Git (sudah ada di .gitignore)
# ============================================================================

# ============================================================================
# PROJECT SETTINGS
# ============================================================================
PROJECT_NAME=gender-voice-detection
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# ============================================================================
# ADMIN CREDENTIALS
# ============================================================================
# Password untuk akses Admin Panel di UI
# GANTI dengan password yang kuat!
ADMIN_PASSWORD=admin123_CHANGE_ME
ADMIN_USERNAME=admin

# Secret key untuk JWT token generation
# Generate dengan: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-CHANGE-ME

# ============================================================================
# MLFLOW CONFIGURATION
# ============================================================================
# Pilihan: local atau dagshub

# --- LOCAL MLflow ---
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow.db
# MLFLOW_ARTIFACT_ROOT=./mlruns

# --- DagsHub MLflow (RECOMMENDED) ---
# Format: https://dagshub.com/[USERNAME]/[REPO_NAME].mlflow
MLFLOW_TRACKING_URI=https://dagshub.com/YOUR_USERNAME/gender-voice-detection.mlflow
MLFLOW_TRACKING_USERNAME=YOUR_DAGSHUB_USERNAME
MLFLOW_TRACKING_PASSWORD=YOUR_DAGSHUB_TOKEN

# Experiment name
MLFLOW_EXPERIMENT_NAME=gender-voice-detection

# ============================================================================
# DVC CONFIGURATION
# ============================================================================
# Google Drive remote untuk DVC
# Setup: dvc remote add -d myremote gdrive://FOLDER_ID
DVC_REMOTE_NAME=gdrive
# DVC_GDRIVE_FOLDER_ID akan di-set saat dvc init

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
# Model paths (relative to project root)
MODEL_DIR=models
MODEL_LSTM_PATH=models/lstm_production.h5
MODEL_GRU_PATH=models/gru_production.h5
MODEL_RNN_PATH=models/rnn_production.h5

# Default model untuk prediction
DEFAULT_MODEL=lstm

# Model metadata
MODEL_VERSION=1.0.0

# ============================================================================
# DATA PATHS
# ============================================================================
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
MFCC_DATA_DIR=data/mfcc
FEEDBACK_DATA_DIR=data/feedback

# ============================================================================
# AUDIO PROCESSING PARAMETERS
# ============================================================================
# Sesuai dengan notebook Anda
AUDIO_SAMPLE_RATE=16000
AUDIO_DURATION=3  # seconds
N_MFCC=13
N_FFT=2048
HOP_LENGTH=512
TARGET_DB=-20.0

# ============================================================================
# TRAINING CONFIGURATION
# ============================================================================
# Default hyperparameters
DEFAULT_EPOCHS=50
DEFAULT_BATCH_SIZE=16
DEFAULT_LEARNING_RATE=0.001
DEFAULT_DROPOUT=0.2
DEFAULT_HIDDEN_UNITS=64

# Dataset split
TRAIN_SPLIT=0.8
VAL_SPLIT=0.1
TEST_SPLIT=0.1

# Random seed untuk reproducibility
RANDOM_SEED=42

# ============================================================================
# FEEDBACK & AUTO-RETRAIN SETTINGS
# ============================================================================
# Jumlah feedback untuk trigger auto-retrain
FEEDBACK_THRESHOLD=20

# Auto-retrain enabled
AUTO_RETRAIN_ENABLED=true

# Minimum accuracy untuk auto-deploy model baru
MIN_ACCURACY_THRESHOLD=0.85

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS settings
CORS_ORIGINS=["http://localhost:7860", "http://localhost:3000"]

# Max file upload size (bytes) - 10MB
MAX_UPLOAD_SIZE=10485760

# ============================================================================
# GRADIO UI CONFIGURATION
# ============================================================================
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false  # Set true untuk public URL (ngrok-like)

# ============================================================================
# HUGGING FACE SETTINGS
# ============================================================================
# HuggingFace Hub credentials
HF_USERNAME=YOUR_HF_USERNAME
HF_TOKEN=YOUR_HF_TOKEN
HF_REPO_ID=YOUR_USERNAME/gender-voice-detection-id
HF_SPACE_NAME=gender-voice-detection-id

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=logs
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# CELERY CONFIGURATION (untuk async training)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# TESTING
# ============================================================================
TESTING=false
TEST_DATA_DIR=tests/fixtures

# ============================================================================
# MONITORING & METRICS
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# DOCKER SETTINGS
# ============================================================================
DOCKER_IMAGE_NAME=gender-voice-detection
DOCKER_IMAGE_TAG=latest
