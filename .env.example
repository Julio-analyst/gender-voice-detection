# ============================================================================
# Environment Variables - Gender Voice Detection MLOps
# ============================================================================
# Copy this file to .env and fill in your credentials
# ============================================================================

# ============================================================================
# DAGSHUB CREDENTIALS
# ============================================================================
# Get your token from: https://dagshub.com/user/settings/tokens
DAGSHUB_TOKEN=your_dagshub_token_here

# Alternative: MLflow credentials (same as DagsHub)
MLFLOW_TRACKING_USERNAME=Julio-analyst
MLFLOW_TRACKING_PASSWORD=your_dagshub_token_here

# MLflow Tracking URI (automatic from config, but can override)
# MLFLOW_TRACKING_URI=https://dagshub.com/Julio-analyst/gender-voice-detection.mlflow

# ============================================================================
# EXPERIMENT SETTINGS
# ============================================================================
MLFLOW_EXPERIMENT_NAME=gender-voice-detection

# ============================================================================
# OPTIONAL: Local Development
# ============================================================================
# Uncomment to use local MLflow instead of DagsHub
# USE_LOCAL_MLFLOW=true

# ============================================================================
# DEPLOYMENT SETTINGS (for future use)
# ============================================================================
# HUGGINGFACE_TOKEN=your_hf_token_here
# DOCKER_USERNAME=your_docker_username
# DOCKER_PASSWORD=your_docker_password
